    </servlet>
    <servlet-mapping>
    <servlet-name>CollectionServlet</servlet-name>
    <url-pattern>/Collection</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MerchandiseServlet</servlet-name>
